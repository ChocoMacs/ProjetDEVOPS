pipeline {
    agent any
    environment {
        DOCKER_IMAGE = 'minikube-image:latest'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/ChocoMacs/ProjetDEVOPS.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    sh 'docker build -t $DOCKER_IMAGE .'
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    sh 'docker run -d --name minikube-container -v /var/run/docker.sock:/var/run/docker.sock -v ~/.kube:/root/.kube $DOCKER_IMAGE'
                }
            }
        }
        stage('Deploy Pods with Ansible') {
            steps {
                ansiblePlaybook(
                    playbook: 'ansible/deploy-pods.yml',
                    inventory: 'localhost,',
                    colorized: true
                )
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
        }
    }
}
